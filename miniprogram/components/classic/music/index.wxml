<!--components/classic/music/index.wxml-->
<view hidden="{{hidden}}" class="classic-container">
        <image class="classic-image {{playing?'rotating':''}}" src="{{image}}"/>
        <image  class="playing {{playing?'lucency':''}}" bind:tap="onPlaying" src="{{playing?playSrc:waitSrc}}"/>
        <image class="tag" src="images/music@tag.png"/>
        <text class="content">{{content}}</text>
</view>
