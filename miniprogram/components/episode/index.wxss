/* components/episode/index.wxss */
.container{
    height: 60rpx;
    display: inline-flex;
    flex-direction: row;
    /* align-content: baseline; */

}

.container-index{
     display: flex;
     flex-direction: row;
     align-items: baseline;
}

.periodical{
    font-size: 32rpx;
}

.index{
    font-size: 60rpx;
    line-height: 60rpx;
    margin-right: 14rpx;
    font-weight: 800;
}

.line{
    height: 44rpx;
    font-weight: 800;
    border-left: 1px solid black;
    margin-right: 14rpx;
}

.container-date{
    display: flex;
    flex-direction: column;
    margin-top: 5rpx;
}

.month{
    font-size: 24rpx;
    line-height: 24rpx;
    
}
.year{
    font-size: 20rpx;
}